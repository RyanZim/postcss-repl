{
  "name": "postcss-repl",
  "version": "1.0.0",
  "private": true,
  "description": "Postcss REPL",
  "homepage": "https://github.com/RyanZim/postcss-repl#readme",
  "bugs": {
    "url": "https://github.com/RyanZim/postcss-repl/issues"
  },
  "license": "ISC",
  "author": "Ryan Zimmerman",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RyanZim/postcss-repl.git"
  },
  "scripts": {
    "analyze": "NODE_ENV=production browserify --full-paths -g aliasify -g envify -i svgo -i source-map app/index.js | discify --open",
    "prebuild": "mkdir -p dist",
    "build": "run-npm -p build:*",
    "build:html-css": "node build-html-css.js",
    "build:js": "NODE_ENV=production browserify -g aliasify -g envify -i svgo -i source-map app/index.js | uglifyjs -c -m > dist/index.js",
    "build:readme": "node build-readme.js",
    "format": "prettier \"*.{js,md}\" \"app/*.{js,css}\" --write",
    "test": "prettier \"*.{js,md}\" \"app/*.{js,css}\" --list-different && npm run build",
    "prewatch": "npm run build",
    "watch": "run-npm -p watch:*",
    "watch:html-css": "onchange app/index.html app/index.css -v -- npm run build:html-css",
    "watch:js": "watchify -d -g aliasify app/index.js -i svgo -i source-map -o dist/index.js",
    "watch:serve": "live-server dist"
  },
  "dependencies": {
    "autoprefixer": "7.2.4",
    "cssnano-browser": "4.0.0-rc.2",
    "lodash.debounce": "^4.0.8",
    "lost": "8.2.0",
    "postcss": "^6.0.16",
    "postcss-calc": "6.0.1",
    "postcss-cssnext": "3.0.2",
    "postcss-filter-plugins": "2.0.2",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-font-family-system-ui-commonjs": "0.0.1",
    "postcss-mixins": "6.2.0",
    "postcss-nested": "3.0.0",
    "postcss-nesting": "4.2.1",
    "postcss-ordered-values": "4.0.0-rc.2",
    "postcss-short": "4.1.0",
    "postcss-simple-vars": "4.1.0",
    "vue": "^2.5.13"
  },
  "devDependencies": {
    "aliasify": "^2.1.0",
    "browserify": "^14.5.0",
    "cssnano": "^4.0.0-rc.2",
    "discify": "^1.6.0",
    "envify": "^4.1.0",
    "live-server": "^1.2.0",
    "onchange": "^3.3.0",
    "postcss-normalize": "^4.0.0",
    "prettier": "1.10.1",
    "script-runner": "^0.1.7",
    "surge": "^0.19.0",
    "uglify-es": "^3.3.5",
    "watchify": "^3.9.0"
  },
  "aliasify": {
    "aliases": {
      "postcss-font-family-system-ui": "postcss-font-family-system-ui-commonjs",
      "caniuse-lite": "./node_modules/caniuse-lite"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "proseWrap": "never"
  }
}
