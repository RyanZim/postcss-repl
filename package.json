{
  "name": "postcss-repl",
  "version": "1.0.0",
  "private": true,
  "description": "Postcss REPL",
  "homepage": "https://github.com/RyanZim/postcss-repl#readme",
  "bugs": {
    "url": "https://github.com/RyanZim/postcss-repl/issues"
  },
  "license": "ISC",
  "author": "Ryan Zimmerman",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RyanZim/postcss-repl.git"
  },
  "scripts": {
    "analyze": "webpack --profile --json > stats.json && webpack-bundle-analyzer stats.json dist",
    "prebuild": "mkdirp dist && node build-plugins-list.js",
    "build": "run-p build:*",
    "build-production": "cross-env NODE_ENV=production npm run build",
    "build:html-css": "node build-html-css.js",
    "build:js": "webpack --progress",
    "format": "npm run prettier -- --write && sort-package-json",
    "test": "npm run prettier -- --list-different && npm run build-production",
    "prettier": "prettier \"**/*.{js,md,css}\"",
    "prewatch": "npm run build",
    "watch": "run-p watch:*",
    "watch:html-css": "onchange app/index.html app/index.css -v -- npm run build:html-css",
    "watch:js": "webpack --watch",
    "watch:serve": "live-server dist"
  },
  "prettier": {
    "proseWrap": "never",
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "autoprefixer": "8.0.0",
    "babel-polyfill": "^6.26.0",
    "brace": "^0.11.1",
    "cssnano-browser": "4.0.0-rc.2",
    "lodash.debounce": "^4.0.8",
    "lost": "8.2.0",
    "postcss": "^6.0.19",
    "postcss-advanced-variables": "2.3.3",
    "postcss-calc": "6.0.1",
    "postcss-cssnext": "3.1.0",
    "postcss-filter-plugins": "3.0.0",
    "postcss-flexbugs-fixes": "3.3.0",
    "postcss-mixins": "6.2.0",
    "postcss-nested": "3.0.0",
    "postcss-nesting": "4.2.1",
    "postcss-ordered-values": "4.0.0-rc.2",
    "postcss-plugins": "^1.11.0",
    "postcss-short": "4.1.0",
    "postcss-simple-vars": "4.1.0",
    "rucksack-css": "^1.0.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.3",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "^1.6.1",
    "cross-env": "^5.1.3",
    "cssnano": "^4.0.0-rc.2",
    "live-server": "^1.2.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.2",
    "null-loader": "^0.1.1",
    "onchange": "^3.3.0",
    "postcss-normalize": "^4.0.0",
    "prettier": "1.11.0",
    "sort-package-json": "^1.11.0",
    "surge": "^0.19.0",
    "svelte": "^1.56.0",
    "svelte-loader": "^2.3.3",
    "uglifyjs-webpack-plugin": "^1.2.0",
    "webpack": "^3.11.0",
    "webpack-bundle-analyzer": "^2.11.0",
    "webpack-merge": "^4.1.2"
  },
  "browserslist": [
    "> 0.5%"
  ]
}
