{
  "name": "postcss-repl",
  "version": "1.0.0",
  "private": true,
  "description": "Postcss REPL",
  "homepage": "https://github.com/RyanZim/postcss-repl#readme",
  "bugs": {
    "url": "https://github.com/RyanZim/postcss-repl/issues"
  },
  "license": "ISC",
  "author": "Ryan Zimmerman",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RyanZim/postcss-repl.git"
  },
  "scripts": {
    "analyze": "npm run browserify -s -- --full-paths | discify --open",
    "browserify": "browserify app/index.js -g aliasify -i svgo -i source-map",
    "prebuild": "mkdir -p dist",
    "build": "run-npm -p build:*",
    "build:html-css": "node build-html-css.js",
    "build:js": "node build-svelte.js && npm run browserify -s | babel | uglifyjs -c -m > dist/index.js",
    "build:readme": "node build-readme.js",
    "format": "npm run prettier -- --write && sort-package-json",
    "test": "npm run prettier -- --list-different && npm run build",
    "prettier": "prettier \"*.{js,md}\" \"app/*.{js,css}\"",
    "prewatch": "npm run build",
    "watch": "run-npm -p watch:*",
    "watch:html-css": "onchange app/index.html app/index.css -v -- npm run build:html-css",
    "watch:js": "onchange app/**/index.js -v -- npm run browserify -- -d -o dist/index.js",
    "watch:serve": "live-server dist",
    "watch:svelte": "onchange app/components/App/App.js app/components/App/App.svelte -v -- node build-svelte.js"
  },
  "dependencies": {
    "autoprefixer": "7.2.4",
    "babel-polyfill": "^6.26.0",
    "cssnano-browser": "4.0.0-rc.2",
    "lodash.debounce": "^4.0.8",
    "lost": "8.2.0",
    "postcss": "^6.0.16",
    "postcss-calc": "6.0.1",
    "postcss-cssnext": "3.0.2",
    "postcss-filter-plugins": "3.0.0",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-font-family-system-ui-commonjs": "2.1.2",
    "postcss-mixins": "6.2.0",
    "postcss-nested": "3.0.0",
    "postcss-nesting": "4.2.1",
    "postcss-ordered-values": "4.0.0-rc.2",
    "postcss-short": "4.1.0",
    "postcss-simple-vars": "4.1.0"
  },
  "devDependencies": {
    "aliasify": "^2.1.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "browserify": "^15.1.0",
    "cssnano": "^4.0.0-rc.2",
    "disc": "^1.3.3",
    "live-server": "^1.2.0",
    "onchange": "^3.3.0",
    "postcss-normalize": "^4.0.0",
    "prettier": "1.10.2",
    "script-runner": "^0.1.7",
    "sort-package-json": "^1.7.1",
    "surge": "^0.19.0",
    "svelte": "^1.51.1",
    "uglify-es": "^3.3.5"
  },
  "aliasify": {
    "aliases": {
      "postcss-font-family-system-ui": "postcss-font-family-system-ui-commonjs",
      "caniuse-lite": "./node_modules/caniuse-lite"
    }
  },
  "browserslist": [
    "> 0.5%"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "proseWrap": "never"
  }
}
